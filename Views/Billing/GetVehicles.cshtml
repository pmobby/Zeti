
@model ZetiTest.ViewModels.BillingViewModel

@{
    ViewData["Title"] = "Billing";
}

<div class="container py-3">
    <header>
        <div class="text-center">
            <h1 class="display-4 fw-normal">Bob's Taxi Billing</h1>
            <p class="fs-5 text-muted">The cost per mileage: £0.207 </p>
        </div>
    </header>
</div>

<main>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        @foreach (var item in Model.VehiclesWithBills)
        {
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">@Html.DisplayFor(modelItem => item.Make)</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">£ @Html.DisplayFor(modelItem => item.CostOfUsage)</h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Vin No: @Html.DisplayFor(modelItem => item.Vin)</li>
                            <li>Licence Plate: @Html.DisplayFor(modelItem => item.LicensePlate)</li>
                            <li>Model: @Html.DisplayFor(modelItem => item.Model)</li>
                            <li>Total miles travelled: @Html.DisplayFor(modelItem => item.MilesTravelled)</li>
                        </ul>
                        
                    </div>
                </div>
            </div>
        }
    </div>
</main>



